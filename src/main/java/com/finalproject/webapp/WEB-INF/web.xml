<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>FWRP Web Application</display-name>

  <!-- User servlets -->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.fwrp.servlet.UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

  <!-- Retailer servlets -->
  <servlet>
    <servlet-name>RetailerServlet</servlet-name>
    <servlet-class>com.fwrp.servlet.RetailerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RetailerServlet</servlet-name>
    <url-pattern>/retailer</url-pattern>
  </servlet-mapping>

  <!-- Consumer servlets -->
  <servlet>
    <servlet-name>ConsumerServlet</servlet-name>
    <servlet-class>com.fwrp.servlet.ConsumerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ConsumerServlet</servlet-name>
    <url-pattern>/consumer</url-pattern>
  </servlet-mapping>

  <!-- Charitable Organization servlets -->
  <servlet>
    <servlet-name>CharitableOrganizationServlet</servlet-name>
    <servlet-class>com.fwrp.servlet.CharitableOrganizationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CharitableOrganizationServlet</servlet-name>
    <url-pattern>/charity</url-pattern>
  </servlet-mapping>

  <!-- Notification servlets -->
  <servlet>
    <servlet-name>NotificationServlet</servlet-name>
    <servlet-class>com.fwrp.servlet.NotificationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>NotificationServlet</servlet-name>
    <url-pattern>/notification</url-pattern>
  </servlet-mapping>

  <!-- Welcome file list -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
